{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    // "declaration": true, // 是否生成声明文件
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    // "lib/**/*.tsx",
    // "tests/*.ts",
    // "tests/**/*.ts",
    // "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}